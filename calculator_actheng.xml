<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#000000"
              android:stretchColumns="*">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#000000"
        android:gravity="bottom|right"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textSize="70dp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/bt_clean"
            android:layout_width="159dp"
            android:layout_height="50dp"
            android:layout_gravity="fill_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/orangerectangle_change"
            android:text="AC"
            android:textAllCaps="false"
            android:textSize="15dp" />


        <Button
            android:id="@+id/bt_del"
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="5dp"
            android:layout_span="2"
            android:background="@drawable/orangerectangle_change"
            android:text="Del"
            android:textAllCaps="false"
            android:textSize="16dp" />

        <Button
            android:id="@+id/bt_left"
            android:text="("
            android:textColor="#FFFFFFFF"
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/orangerectangle_change"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_right"
            android:text=")"
            android:textColor="#FFFFFFFF"
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/orangerectangle_change"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_ci"
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/orangerectangle_change"
            android:text="^"
            android:textAllCaps="false"
            android:textSize="15dp" />

        <Button
            android:id="@+id/bt_lg"
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:layout_gravity="fill_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/orangerectangle_change"
            android:text="lg"
            android:textAllCaps="false"
            android:textSize="15dp" />
    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/bt_7"
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/blackrectangle_change"
            android:text="7"
            android:textColor="#FFFFFFFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_8"
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/blackrectangle_change"
            android:text="8"
            android:textColor="#FFFFFFFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_9"
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/blackrectangle_change"
            android:text="9"
            android:textColor="#FFFFFFFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_minus"
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/orangerectangle_change"
            android:text="-"
            android:textColor="#FFFFFFFF"
            android:textSize="20dp" />





        <Button
            android:id="@+id/bt_add"
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/orangerectangle_change"
            android:text="+"
            android:textColor="#FFFFFFFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_sin"
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:layout_gravity="fill_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/orangerectangle_change"
            android:text="sin"
            android:textAllCaps="false"
            android:textSize="15dp" />

        <Button
            android:id="@+id/bt_cos"
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:layout_gravity="fill_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/orangerectangle_change"
            android:text="cos"
            android:textAllCaps="false"
            android:textSize="15dp" />



    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/bt_4"
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/blackrectangle_change"
            android:text="4"
            android:textColor="#FFFFFFFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_5"
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/blackrectangle_change"
            android:text="5"
            android:textColor="#FFFFFFFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_6"
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/blackrectangle_change"
            android:text="6"
            android:textColor="#FFFFFFFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_point"
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/blackrectangle_change"
            android:textSize="20dp"
            android:text="."
            android:textColor="#FFFFFFFF"/>

        <Button
            android:id="@+id/bt_divide"
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/orangerectangle_change"
            android:text="รท"
            android:textColor="#FFFFFFFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_tan"
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/orangerectangle_change"
            android:text="tan"
            android:textAllCaps="false"
            android:textSize="15dp" />

        <Button
            android:id="@+id/bt_gen"
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:layout_gravity="fill_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/orangerectangle_change"
            android:text="โ"
            android:textAllCaps="false"
            android:textSize="15dp" />


    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/bt_1"
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:background="@drawable/blackrectangle_change"
            android:text="1"
            android:textColor="#FFFFFFFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_2"
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/blackrectangle_change"
            android:text="2"
            android:textColor="#FFFFFFFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_3"
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/blackrectangle_change"
            android:text="3"
            android:textColor="#FFFFFFFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_0"
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/blackrectangle_change"
            android:text="0"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:textColor="#FFFFFFFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_multiply"
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/orangerectangle_change"
            android:text="ร"
            android:textColor="#FFFFFFFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_equal"
            android:text="="
            android:textColor="#FFFFFFFF"
            android:layout_width="159dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/orangerectangle_change"
            android:textSize="20dp" />
    </TableRow>



</LinearLayout>